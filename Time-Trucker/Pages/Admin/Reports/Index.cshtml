@page
@model Time_Trucker.Pages.Admin.Reports.IndexModel


<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Time Reporting List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="create" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp;Create New Report
			</a>
		</div>
	</div>

	<br /><br />

	<table id="DT_load" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Starting Date
				</th>
				<th>
					Ending Date
				</th>
				<th>
					Project
				</th>
				<th>
					Customer
				</th>
				<th>
					Description
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model.Reports)
			{
				<tr>
					<td width="50%">@obj.StartingDate</td>
					<td width="30%">@obj.EndingDate</td>
					<td width="30%">@obj.ProjectId</td>
					<td width="30%">@obj.CustomerId</td>
					<td width="30%">@obj.Description</td>
					<td>
						<div class="w-75 btn-group" role="group">
						<a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i>
						</a>
						<a asp-page="Delete" asp-route-id="@obj.Id"  class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill"></i>
						</a>
						</div>
					</td>
				</tr>
			}
			
		</tbody>
	</table>
</div>

 @section Scripts{
	<script src="~/js/Report.js"></script>
}

