@page
@model Time_Trucker.Pages.Admin.Customers.CreateModel


<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Create Customer</h2>
            <hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Customer.FullName"></label>
			<input asp-for="Customer.FullName" class="form-control" />
			<span asp-validation-for="Customer.FullName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Customer.PhoneNumber"></label>
			<input asp-for="Customer.PhoneNumber" class="form-control" />
			<span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Customer.Email"></label>
			<input asp-for="Customer.Email" class="form-control" />
			<span asp-validation-for="Customer.Email" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Customer.Address"></label>
			<input asp-for="Customer.Address" class="form-control" />
			<span asp-validation-for="Customer.Address" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Customer.City"></label>
			<input asp-for="Customer.City" class="form-control" />
			<span asp-validation-for="Customer.City" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Customer.State"></label>
			<input asp-for="Customer.State" class="form-control" />
			<span asp-validation-for="Customer.State" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Customer.PostCode"></label>
			<input asp-for="Customer.PostCode" class="form-control" />
			<span asp-validation-for="Customer.PostCode" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
		<a asp-page="Index" class="btn btn-secondary"  style="width:150px;"> Back to List</a>
       
	</div>
	
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}
